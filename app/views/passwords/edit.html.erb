<h1>Edit Pasword</h1>

<%= form_with model: Current.user, url: edit_password_path do |form| %>
  <%= render "shared/form_errors", form: form %>

  <div class="form-group">
    <%= form.label :password, "Password", class: "form-label" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, "Confirm Password", class: "form-label" %>
    <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Confirm your password" %>
  </div>
  <div class="mt-3">
    <%= form.submit "Update Password", class: "btn btn-primary" %>
  </div>
<% end %>
